@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
            @Major
            @Minor
            @Revision
        </article>
    </main>
</div>
@code {
    public string? Major = System.Reflection.Assembly.GetExecutingAssembly()?.GetName()?.Version?.Major.ToString();
    public string? Minor = System.Reflection.Assembly.GetExecutingAssembly()?.GetName()?.Version?.Minor.ToString();
    public string? Revision = System.Reflection.Assembly.GetExecutingAssembly()?.GetName()?.Version?.Revision.ToString();
}